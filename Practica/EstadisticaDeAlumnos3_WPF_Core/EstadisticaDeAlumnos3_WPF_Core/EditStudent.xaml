<Window x:Class="EstadisticaDeAlumnos3_WPF_Core.EditStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstadisticaDeAlumnos3_WPF_Core"
        mc:Ignorable="d"
        Title="Add student" Height="300" Width="400
        ">
    <StackPanel Margin="10">
		<Label Content="_Name:" Target="{Binding ElementName=txtName}" />
		<TextBox Name="txtName" />
		<Label Content="_DNI:" Target="{Binding ElementName=txtDni}" />
		<TextBox Name="txtDni" />
        <Label Content="_Chair:" Target="{Binding ElementName=txtChair}" />
        <TextBox Name="txtChair"></TextBox>
        <Button Margin="0,20,0,0" Content="Add" Name="btnAdd" Click="btnAdd_Click"></Button>
	</StackPanel>
</Window>
