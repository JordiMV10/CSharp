<Window x:Class="EstadisticaDeAlumnos3_WPF_Core.EditSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstadisticaDeAlumnos3_WPF_Core"
        mc:Ignorable="d"
        Title="EditSubject" Height="140" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="_Name:" Target="{Binding ElementName=txtName}" />
            <TextBox Name="txtName" />            
            <Button Margin="0,10,0,0" Content="Add" Name="btnAdd" Click="btnAdd_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
